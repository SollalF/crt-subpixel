{
  "name": "crt-subpixel",
  "version": "1.0.0",
  "description": "WebGPU-based library for CRT-style subpixel image processing",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "pnpm build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dev": "vite",
    "serve": "vite preview"
  },
  "keywords": [
    "webgpu",
    "crt",
    "subpixel",
    "image-processing",
    "shader"
  ],
  "author": "Sollal Fouilland",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/SollalF/crt-subpixel"
  },
  "packageManager": "pnpm@10.5.2",
  "peerDependencies": {
    "@webgpu/types": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@webgpu/types": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/format": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.0",
    "@webgpu/types": "^0.1.68",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "unplugin-typegpu": "^0.8.0",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.{ts,js,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "tinyest": "^0.1.2",
    "typed-binary": "^4.3.2",
    "typegpu": "^0.8.2"
  }
}
